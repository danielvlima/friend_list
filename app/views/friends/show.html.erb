<p style="color: green"><%= notice %></p>

<div class="card" style="width: 40rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @friend.first_name %></h5>
    <p class="card-text"><%= @friend.email %> | 
    <%= @friend.phone %> | <%= @friend.twitter %></p>

    <%= link_to "Back to friends", friends_path, class: "btn btn-secondary" %>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-secondary" %>
<p style="color: green"><%= notice %></p>
    <%= button_to "Delete", @friend, method: :delete, class: "btn btn-danger" %>

  </div>
</div>

